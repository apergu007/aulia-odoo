<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- purchase.order inherit tree view -->
    <record id="purchase_order_view_tree_inherit_bmo_purchase" model="ir.ui.view">
        <field name="name">purchase.order.tree.inherit.bmo_purchase</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="before">
                <field name="types" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form_inherit_bmo_purchase" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.bmo_purchase</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_cancel']" position="replace">
                <button name="wizard_pop_up_cancel" invisible="state not in ('draft', 'to approve', 'sent', 'purchase')" string="Cancel" type="object" data-hotkey="x"/>
            </xpath>
            <!-- diopen dlu buat migrasi -->
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="p_categ" required="1" readonly="origin != False" force_save="1"/>
                <field name="types" required="1" readonly="(state in ['cancel', 'done', 'purchase']) or from_pr == True"/>
            </xpath>

            <xpath expr="//field[@name='origin']" position="after">
                <field name="from_pr" invisible="1"/>
                <field name="po_teams_domain" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
                <field name="description" />
            </xpath>

        </field>
    </record>

    <record id="purchase_order_approval_form_inherit_pr_inherit_bmo_purchase" model="ir.ui.view">
        <field name="name">purchase.order.inherit.form.inherit.bmo_purchase</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="bmo_purchase_approval_route.purchase_order_approval_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='team_id']" position="attributes">
                <attribute name="domain">po_teams_domain</attribute>
            </xpath>

        </field>
    </record>

    <record id="purchase_order_view_form_inherit_bmo_purchase" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.inherit.bmo_purchase</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_stock.purchase_order_view_form_inherit"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

</odoo>