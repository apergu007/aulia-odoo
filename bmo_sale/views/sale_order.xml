<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_quotation_tree_inherit_bmo_sale" model="ir.ui.view">
        <field name="name">sale.order.list (quotes).inherit.bmo_sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='create_date']" position="before">
                <field name="po_number"/>
            </xpath>
            
        </field>
    </record>

    <record id="sale_order_tree_inherit_bmo_sale" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.bmo_sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="after">
                <field name="po_number"/>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sale_categ_id" optional="hide"/>
                <field name="sale_type" optional="hide"/>
            </xpath>

        </field>
    </record>

    <record id="view_order_form_inherit_bmo_sale" model="ir.ui.view">
        <field name="name">sale.order.inherit.bmo_sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="sale_type" required="1" readonly="state in ['cancel', 'sale']"/>
                <field name="sale_categ_id" invisible="sale_type != 'reguler'" readonly="state in ['cancel', 'sale']"/>
                <field name="saldo_sisa"/>
                <field name="po_number" readonly="state in ['cancel', 'sale']"/>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="replace">
                <field name="user_id" widget="many2one_avatar_user" invisible="1"/>
                <field name="employee_id" widget="many2one_avatar_user"/>
            </xpath>

            <!-- <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="before">
            </xpath> -->
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="attributes">
                <attribute name="domain">categ_domain</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='product_template_id']" position="attributes">
                <attribute name="domain">categ_domain</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='product_uom_qty']" position="before">
                <field name="categ_domain" column_invisible="1"/>
                <field name="brand_id"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="attributes">
                <attribute name="readonly">parent.sale_type == 'sample' or qty_invoiced &gt; 0</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_subtotal']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list/field[@name='price_total']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/list" position="inside">
                <field name="price_subtotal" column_invisible="parent.company_price_include == 'tax_included'" invisible="is_downpayment" string="Amount Incl."/>
                <field name="price_total" optional="hide" invisible="is_downpayment" string="Amount Excl."/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_form_quote_inherit_bmo_sale" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale_management.inherit.bmo_sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_management.sale_order_form_quote"/>
        <field name="arch" type="xml">
            <field name="sale_order_template_id" position="replace">
                <field name="sale_order_template_id"
                    options="{'no_create': True}"
                    groups="sale_management.group_sale_order_template"
                    readonly="state in ['cancel', 'sale']" invisible="1"/>
                <field name="sale_order_template_ids"
                    widget="many2many_tags"
                    options="{'no_create': True}"
                    groups="sale_management.group_sale_order_template"
                    readonly="state in ['cancel', 'sale']"/>
            </field>
        </field>
    </record>
</odoo>
